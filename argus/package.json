{
  "name": "argus",
  "version": "1.0.0",
  "description": "AI-powered WhatsApp proactive memory assistant",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest run --reporter=dot",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --reporter=dot",
    "lint": "eslint src --max-warnings=0 --cache",
    "lint:fix": "eslint src --fix --cache",
    "format": "prettier --write src/**/*.ts --cache",
    "format:check": "prettier --check src/**/*.ts --cache",
    "typecheck": "tsc --noEmit",
    "db:reset": "rm -f data/events.db && npm run dev",
    "clean": "rm -rf dist node_modules/.cache",
    "prepare": "mkdir -p data logs"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.0.1",
    "pg": "^8.18.0",
    "web-push": "^3.6.7",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.16.0",
    "@types/web-push": "^3.6.4",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
